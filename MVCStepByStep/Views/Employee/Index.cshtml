
@using MVCStepByStep.ViewModels
@model EmployeeListViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    
    <div>
        <b>
            Employee Details
        </b><br />
        <table>
            <tr>
                <th>Employee Name</th>
                <th>Salary</th>
                <th></th>
            </tr>

            @foreach (var item in Model.Employees)
            {
                <tr>
                    <td>@item.EmployeeName</td>
                    <td style="background-color:@item.SalaryColor">@item.Salary</td>
                </tr>
            }

        </table>
        <a href="/Employee/AddNew">Add New Employee</a>
    </div>
</body>
</html>
